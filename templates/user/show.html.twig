{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
    <div class="text-center">
        <img src="{{ asset(user.image) }}" class="img-responsive" width="200" alt="">
        <h4>
            {{ user.name }}<br>
            {{ user.surname }}<br>
        </h4>
        <p>
            {{ user.gender }}<br>
            {{ user.age }}
        </p>
        <a href="/">Go back</a>
    </div>
{% endblock %}
